                <% end %>
            </li>
        <% else %>
            <li>
              <p class="text-white font-bold">
                <%= link_to "ログイン", new_user_session_path %>
              </p>
            </li>
        <% end %>
        <div class="divider"></div>
        <li>
          <div class="flex justify-center">
            <%= link_to "https://x.com/sakupimskk" do %>
              <i class="fa-brands fa-square-x-twitter fa-2x"></i>
            <% end %>
