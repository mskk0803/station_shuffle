<div class="flex justify-center flex-col p-4">
  <h1 class="text-3xl font-bold text-center underline text-gray-800">
    到着報告をする！
  </h1>
</div>

<div class="flex justify-center">
  <div class="w-full max-w-md p-6 bg-white rounded-box shadow space-y-4">
    <%= form_for @post, html: { multipart: true } do |f| %>

      <div class="form-control">
        <%= f.label :station, class: "label" do %>
          <span class="label-text">最近のチェックイン駅</span>
        <% end %>
        <%= f.select :station,
          options_for_select(@stations),
          {},
          class: "select select-bordered w-48 max-w-xs bg-white" %>
      </div>

      <div class="form-control">
        <%= f.label :content, class: "label" do %>
          <span class="label-text">コメント</span>
        <% end %>
        <%= f.text_area :content, class: "textarea textarea-bordered h-24 bg-white", placeholder: "感想などを記入してください" %>
      </div>

      <div class="form-control">
        <%= f.label :image, class: "label" do %>
          <span class="label-text">写真をアップロード</span>
        <% end %>
        <%= f.file_field :image, class: "file-input file-input-bordered w-full max-w-xs bg-white" %>
        <%= f.hidden_field :image_cache %>
      </div>

      <div class="flex flex-col items-start gap-2 mt-6">
        <%= f.submit "報告！", class: "btn btn-primary w-full text-white" %>
        <%= link_to "今度にする", posts_path, class: "link text-sm text-gray-500 hover:text-primary" %>
      </div>

    <% end %>
  </div>
</div>
