<h1>到着報告をする！</h1>

<%= form_for @post do |f| %>
  <div class="label">
    <%= f.label :content, class:"label-text" %>
  </div>
    <%= f.text_area :content, class:"textarea textarea-bordered h-24" %>
  <div>
  <div class="label">
    <%= f.label :image, class:"label-text" %>
  </div>
    <%= f.file_field :image, class:"file-input file-input-bordered w-full max-w-xs" %>
    <%= f.hidden_field :image_cache %>
  <div>
  <%= f.submit "報告！", class:"btn" %>
  </div>
<% end %>
