<div class="max-w-md mx-auto bg-white shadow-md rounded-xl mt-8 p-8 space-y-6">
  <h2 class="text-2xl font-bold text-center text-gray-800">新規登録</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>

    <div class="form-control">
      <label class="input input-bordered flex items-center gap-2 bg-white mb-3">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" fill="currentColor" class="h-4 w-4 text-gray-500">
          <path d="M2.5 3A1.5 1.5 0 0 0 1 4.5v.793c.026.009.051.02.076.032L7.674 8.51c.206.1.446.1.652 0l6.598-3.185A.755.755 0 0 1 15 5.293V4.5A1.5 1.5 0 0 0 13.5 3h-11Z" />
          <path d="M15 6.954 8.978 9.86a2.25 2.25 0 0 1-1.956 0L1 6.954V11.5A1.5 1.5 0 0 0 2.5 13h11a1.5 1.5 0 0 0 1.5-1.5V6.954Z" />
        </svg>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "grow text-gray-900 bg-white" %>
      </label>
    </div>

    <div class="form-control">
      <label class="input input-bordered flex items-center gap-2 bg-white mb-3">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="h-4 w-4 text-gray-500">
          <path fill-rule="evenodd" d="M10 10a4 4 0 1 0-4-4 4 4 0 0 0 4 4Zm0 1c-2.67 0-8 1.34-8 4v1a1 1 0 0 0 1 1h14a1 1 0 0 0 1-1v-1c0-2.66-5.33-4-8-4Z" clip-rule="evenodd" />
        </svg>
        <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "名前", class: "grow text-gray-900 bg-white" %>
      </label>
    </div>

    <div class="form-control">
      <label class="input input-bordered flex items-center gap-2 bg-white mb-3">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" fill="currentColor" class="h-4 w-4 text-gray-500">
          <path fill-rule="evenodd" d="M14 6a4 4 0 0 1-4.899 3.899l-1.955 1.955a.5.5 0 0 1-.353.146H5v1.5a.5.5 0 0 1-.5.5h-2a.5.5 0 0 1-.5-.5v-2.293a.5.5 0 0 1 .146-.353l3.955-3.955A4 4 0 1 1 14 6Zm-4-2a.75.75 0 0 0 0 1.5.5.5 0 0 1 .5.5.75.75 0 0 0 1.5 0 2 2 0 0 0-2-2Z" clip-rule="evenodd" />
        </svg>
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワード", class: "grow text-gray-900 bg-white" %>
      </label>
      <% if @minimum_password_length %>
        <p class="text-xs text-gray-500">※ <%= @minimum_password_length %>文字以上</p>
      <% end %>
    </div>

    <div class="form-control">
      <label class="input input-bordered flex items-center gap-2 bg-white mb-3">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" fill="currentColor" class="h-4 w-4 text-gray-500">
          <path fill-rule="evenodd" d="M14 6a4 4 0 0 1-4.899 3.899l-1.955 1.955a.5.5 0 0 1-.353.146H5v1.5a.5.5 0 0 1-.5.5h-2a.5.5 0 0 1-.5-.5v-2.293a.5.5 0 0 1 .146-.353l3.955-3.955A4 4 0 1 1 14 6Zm-4-2a.75.75 0 0 0 0 1.5.5.5 0 0 1 .5.5.75.75 0 0 0 1.5 0 2 2 0 0 0-2-2Z" clip-rule="evenodd" />
        </svg>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワード（確認）", class: "grow text-gray-900 bg-white" %>
      </label>
    </div>

    <div class="mt-4">
      <%= f.submit "新規登録", class: "btn btn-primary w-full text-white" %>
    </div>
  <% end %>

  <div class="text-center text-sm text-gray-500">
    <%= render "users/shared/links" %>
  </div>
</div>
