<div class="max-w-md mx-auto bg-white shadow-md rounded-xl mt-8 p-8 space-y-6">
  <h2 class="text-2xl font-bold text-center text-gray-800">パスワードの変更</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="form-control">
      <label class="input input-bordered flex items-center gap-2 bg-white mb-3">
        <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="h-4 w-4 text-gray-500" viewBox="0 0 16 16">
          <path fill-rule="evenodd" d="M14 6a4 4 0 0 1-4.899 3.899l-1.955 1.955a.5.5 0 0 1-.353.146H5v1.5a.5.5 0 0 1-.5.5h-2a.5.5 0 0 1-.5-.5v-2.293a.5.5 0 0 1 .146-.353l3.955-3.955A4 4 0 1 1 14 6Zm-4-2a.75.75 0 0 0 0 1.5.5.5 0 0 1 .5.5.75.75 0 0 0 1.5 0 2 2 0 0 0-2-2Z" clip-rule="evenodd" />
        </svg>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", placeholder: "New password", class: "grow text-gray-900 bg-white" %>
      </label>
      <% if @minimum_password_length %>
        <em class="text-sm text-gray-500">(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
    </div>

    <div class="form-control">
      <label class="input input-bordered flex items-center gap-2 bg-white mb-3">
        <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="h-4 w-4 text-gray-500" viewBox="0 0 16 16">
          <path fill-rule="evenodd" d="M14 6a4 4 0 0 1-4.899 3.899l-1.955 1.955a.5.5 0 0 1-.353.146H5v1.5a.5.5 0 0 1-.5.5h-2a.5.5 0 0 1-.5-.5v-2.293a.5.5 0 0 1 .146-.353l3.955-3.955A4 4 0 1 1 14 6Zm-4-2a.75.75 0 0 0 0 1.5.5.5 0 0 1 .5.5.75.75 0 0 0 1.5 0 2 2 0 0 0-2-2Z" clip-rule="evenodd" />
        </svg>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm new password", class: "grow text-gray-900 bg-white" %>
      </label>
    </div>

    <div class="mt-4">
      <%= f.submit "パスワードを変更", class: "btn btn-primary w-full text-white" %>
    </div>
  <% end %>

  <div class="text-center text-sm text-gray-500">
    <%= render "users/shared/links" %>
  </div>
</div>

