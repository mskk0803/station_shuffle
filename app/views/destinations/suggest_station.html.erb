<div class="sticky top-[64px] z-30 bg-white">
  <div class="flex justify-center flex-col p-4">
    <h1 class="text-3xl font-bold text-center underline text-gray-800">
      行き先を確認
    </h1>
  </div>

  <div class="flex justify-center">
    <div data-controller="display-maps" class="w-full max-w-md p-6 bg-white rounded-box shadow space-y-4">
      
      <div class="text-center">
        <p class="text-xl font-semibold text-gray-700" data-display-maps-target="name">
          <%= @suggest_station["name"] %>
        </p>
      </div>

      <!-- 地図表示 -->
      <div id="map" data-display-maps-target="map" class="w-full h-64 rounded-lg border"></div>

      <!-- hidden inputs -->
      <input type="hidden" value="<%= @suggest_station["latitude"] %>" data-display-maps-target="latitude" />
      <input type="hidden" value="<%= @suggest_station["longitude"] %>" data-display-maps-target="longitude" />
      <input type="hidden" value="<%= @pre_location["latitude"] %>" data-display-maps-target="preLat" />
      <input type="hidden" value="<%= @pre_location["longitude"] %>" data-display-maps-target="preLon" />

      <!-- ボタン -->
      <div class="flex flex-col gap-3 mt-6">
        <%= button_to "この駅に決定", suggest_station_destinations_path(@suggest_station), class: "btn btn-primary w-full" %>
        <%= button_to "戻る", select_stations_destinations_path, method: :get, class: "btn btn-sm btn-ghost text-gray-500" %>
      </div>
    </div>
  </div>
</div>
