
  <div class="navbar bg-base-100 flex justify-center">
    <div class="navbar-center">
        <ul class="menu menu-horizontal m-1">
        <li>
            <%= link_to '投稿一覧', profile_posts_path(current_user.id), class: "#{'active' if action_name == 'posts'}" %>
        </li>
        <li>
            <%= link_to 'いいね一覧', profile_likes_path(current_user.id), class: "#{'active' if action_name == 'likes'}" %>
        </li>
        <li>
            <%= link_to 'チェックイン履歴', profile_checkins_path(current_user.id), class: "#{'active' if action_name == 'checkins'}" %>
        </li>
        </ul>
    </div>
  </div>
  <div class="mypage-content">
  <%= case action_name
     when "posts"
       render partial: 'posts', locals: { posts: @posts }
