<div class="max-w-md mx-auto bg-white shadow-md rounded-xl mt-8 p-8 space-y-6">
  <h2 class="text-2xl font-bold text-center text-gray-800">登録情報の変更</h2>

  <%= form_with model: @user, url: profile_path, method: :patch do |f| %>
    
    <!-- 名前 -->
    <div class="form-control">
      <label class="input input-bordered flex items-center gap-2 bg-white mb-3">
        <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 16 16" class="h-4 w-4 text-gray-500">
          <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6ZM2 14s1-1 6-1 6 1 6 1v1H2v-1Z" />
        </svg>
        <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "名前", class: "grow text-gray-900 bg-white" %>
      </label>
    </div>

    <!-- プロフィール -->
    <div class="form-control">
      <label class="label">
        <span class="label-text text-sm text-gray-700">プロフィール</span>
      </label>
      <%= f.text_area :profile, class: "textarea textarea-bordered h-24 text-gray-900 bg-white", placeholder: "自己紹介などを入力" %>
    </div>

    <!-- 非公開設定 -->
    <div class="form-control">
      <label class="flex items-center gap-2 mt-2">
        <%= f.check_box :is_private, class: "checkbox checkbox-primary" %>
        <span class="text-gray-700 text-sm">プロフィールを非公開にする</span>
      </label>
    </div>

    <!-- 更新ボタン -->
    <div class="mt-4">
      <%= f.submit "更新", class: "btn btn-primary w-full text-white" %>
    </div>
    
  <% end %>
</div>

