<h3>登録情報の変更</h3>
<%= form_with model: @user, url: profile_path, method: :patch do |f| %>
    <div class="field">
        <%= f.label :name, class:"label-text" %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
    </div>
    <div class="field">
        <%= f.label :profile, class:"label-text" %><br />
        <%= f.text_area :profile, class:"textarea textarea-bordered h-24" %>
    </div>
    <div class="field">
        <%= f.label :is_private, class:"label-text" %><br />
        <%= f.check_box :is_private, class:"checkbox" %>
    </div>
  <%= f.submit "更新", class:"btn" %>
  </div>
<% end %>

