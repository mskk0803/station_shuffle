<%= turbo_frame_tag "follow-button-#{@user.id}" do %>
    <% if current_user.following?(@user) %>
        <%= button_to follow_path(id: @user.id), method: :delete, class: "btn btn-primary text-white" do %>
            フォロー中
        <% end %>
    <% elsif current_user.request?(@user) %>
        <%= button_to follow_request_cancel_path(current_user.sent_follow_request(@user).id), method: :delete, class: "btn btn-warning text-white" do %>
            リクエスト中
        <% end %>
    <% else %>
        <%= button_to follows_path(id: @user.id), method: :post, class: "btn btn-primary text-white" do %>
            フォロー
        <% end %>
    <% end %>
<% end %>