
<div class="navbar bg-base-100 flex justify-center py-4">
  <h1 class="text-3xl font-bold"><%= @user.name %>さんのフォロワー</h1>
</div>

<div class="flex flex-col items-center w-full mt-6 space-y-4 px-4">
  <% if @followers_users.empty? %>
    <div class="card bg-white shadow-xl w-full max-w-2xl">
      <div class="p-4 text-center text-gray-500">
        フォローしているユーザーはいません。
      </div>
    </div>
  <% else %>
    <% @followers_users.each do |user| %>
      <div class="card bg-white shadow-xl w-full max-w-2xl">
        <div class="p-4">
          <%= link_to profile_path(user.id), class: "flex items-center space-x-2 text-lg font-semibold hover:underline" do %>
            <span><%= user.name %></span>
            <% if user.is_private %>
              <i class="fa-solid fa-lock text-sm"></i>
            <% end %>
          <% end %>
        </div>
      </div>
    <% end %>
  <% end %>
</div>