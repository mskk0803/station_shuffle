
<div class="sticky top-[64px] z-30 bg-white shadow">
  <div class="flex items-center justify-between p-4">
    <!-- 左側：戻るボタン -->
    <%= link_to "<< プロフィール", profile_path(@user.id), class: "text-600 hover:underline" %>

    <!-- 中央：タイトル -->
    <h1 class="text-xl sm:text-2xl md:text-3xl font-bold text-center text-gray-800 flex-1 text-center">
      <%= @user.name %>さんのフォロワー
    </h1>

    <!-- 右側の空白（中央寄せのため） -->
    <div class="w-24"></div>
  </div>
</div>

<div class="flex flex-col items-center w-full mt-6 space-y-4 px-4">
  <% if @followers_users.empty? %>
    <div class="card bg-white shadow-xl w-full max-w-2xl">
      <div class="p-4 text-center text-gray-500">
        フォローしているユーザーはいません。
      </div>
    </div>
  <% else %>
    <% @followers_users.each do |user| %>
      <div class="card bg-white shadow-xl w-full max-w-2xl">
        <div class="p-4">
          <%= link_to profile_path(user.id), class: "flex items-center space-x-2 text-lg font-semibold hover:underline" do %>
            <span><%= user.name %></span>
            <% if user.is_private %>
              <i class="fa-solid fa-lock text-sm"></i>
            <% end %>
          <% end %>
        </div>
      </div>
    <% end %>
  <% end %>
</div>