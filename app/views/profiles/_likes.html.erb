<%= turbo_frame_tag "likes-page-#{likes.current_page}" do %>
  <div class="flex flex-col items-center w-full space-y-4 mt-6">  
      <% likes.each do |like| %>
          <div class="w-full max-w-2xl">
              <%= render partial: "shared/other_post", locals: { post: like } %>  
          </div>
      <% end %>
  </div>
  <%= turbo_frame_tag "likes-page-#{likes.next_page}", loading: :lazy, src: path_to_next_page(likes) %>
<% end %>