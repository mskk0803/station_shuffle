

<div class="flex flex-col items-center w-full space-y-4 mt-6">
    <% if checkins.empty? %>
    <p>チェックイン履歴はありません。</p>
    <% else %>
        <ul class="timeline timeline-vertical">
        <% checkins.each_with_index do |checkin, index| %>
            <% if index == 0 %>
                <li>
                    <div class="timeline-start">
                        <%= checkin.created_at.strftime("%Y-%m-%d %H:%M") %>
                    </div>
                    <div class="timeline-middle">
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        viewBox="0 0 20 20"
                        fill="currentColor"
                        class="h-5 w-5">
                        <path
                        fill-rule="evenodd"
                        d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z"
                        clip-rule="evenodd" />
                    </svg>
                    </div>
                    <div class="timeline-end timeline-box bg-white">
                        <%= checkin.station %>
                    </div>
                    <hr />
                </li>
            <% elsif index == checkins.length - 1 %>
                <li>
                    <hr />
                    <div class="timeline-start">
                        <%= checkin.created_at.strftime("%Y-%m-%d %H:%M") %>
                    </div>
                    <div class="timeline-middle">
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        viewBox="0 0 20 20"
                        fill="currentColor"
                        class="h-5 w-5">
                        <path
                        fill-rule="evenodd"
                        d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z"
                        clip-rule="evenodd" />
                    </svg>
                    </div>
                    <div class="timeline-end timeline-box bg-white">
                        <%= checkin.station %>
                    </div>
                </li>
            <% else %>
                <li>
                    <hr />
                    <div class="timeline-start">
                        <%= checkin.created_at.strftime("%Y-%m-%d %H:%M") %>
                    </div>
                    <div class="timeline-middle">
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        viewBox="0 0 20 20"
                        fill="currentColor"
                        class="h-5 w-5">
                        <path
                        fill-rule="evenodd"
                        d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z"
                        clip-rule="evenodd" />
                    </svg>
                    </div>
                    <div class="timeline-end timeline-box bg-white">
                        <%= checkin.station %>
                    </div>
                <hr />
                </li>
            <% end %>
        <% end %>
        </ul>
    <% end %>

</div>

